<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List para movimientos -->
    <record id="view_customer_account_move_tree" model="ir.ui.view">
        <field name="name">customer.account.move.list</field>
        <field name="model">customer.account.move</field>
        <field name="arch" type="xml">
            <list string="Movimientos de Cuenta" create="false">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="description"/>
                <field name="debit" sum="Total Debe"/>
                <field name="credit" sum="Total Haber"/>
                <field name="balance"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Form para movimientos -->
    <record id="view_customer_account_move_form" model="ir.ui.view">
        <field name="name">customer.account.move.form</field>
        <field name="model">customer.account.move</field>
        <field name="arch" type="xml">
            <form string="Movimiento de Cuenta">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="balance"/>
                            <field name="reference"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista Form para pagos -->
    <record id="view_customer_payment_form" model="ir.ui.view">
        <field name="name">customer.payment.form</field>
        <field name="model">customer.payment</field>
        <field name="arch" type="xml">
            <form string="Pago de Cliente">
                <header>
                    <button name="action_post" string="Confirmar" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancelar" type="object" invisible="state != 'posted'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="payment_method"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="memo"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- Vista List para pagos -->
    <record id="view_customer_payment_tree" model="ir.ui.view">
        <field name="name">customer.payment.list</field>
        <field name="model">customer.payment</field>
        <field name="arch" type="xml">
            <list string="Pagos de Clientes">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="payment_method"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <!-- Acciones del menú -->
    <record id="action_customer_account_moves" model="ir.actions.act_window">
        <field name="name">Movimientos de Cuenta Corriente</field>
        <field name="res_model">customer.account.move</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
    </record>
    
    <record id="action_customer_payments" model="ir.actions.act_window">
        <field name="name">Pagos de Clientes</field>
        <field name="res_model">customer.payment</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Menús -->
    <menuitem id="menu_account_current_root" 
              name="Cuenta Corriente" 
              parent="point_of_sale.menu_point_root"
              sequence="50"/>
              
    <menuitem id="menu_customer_account_moves" 
              name="Movimientos" 
              parent="menu_account_current_root"
              action="action_customer_account_moves"
              sequence="10"/>
              
    <menuitem id="menu_customer_payments" 
              name="Pagos" 
              parent="menu_account_current_root"
              action="action_customer_payments"
              sequence="20"/>
</odoo>
