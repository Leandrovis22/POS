<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_inherit_temp_product" model="ir.ui.view">
        <field name="name">pos.config.form.temp.product</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group string="Producto temporal">
                    <field name="temp_product_id" options="{&quot;no_create&quot;: False}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
