<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Crear diario para cuenta corriente si no existe -->
        <record id="account_journal_customer_account" model="account.journal">
            <field name="name">Cuenta Corriente Cliente</field>
            <field name="code">CTACTE</field>
            <field name="type">cash</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Crear mÃ©todo de pago para POS -->
        <record id="pos_payment_method_customer_account" model="pos.payment.method">
            <field name="name">Cuenta Corriente</field>
            <field name="journal_id" ref="account_journal_customer_account"/>
            <field name="split_transactions" eval="True"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</odoo>
