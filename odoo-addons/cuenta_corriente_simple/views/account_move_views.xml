<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ocultar widget de créditos pendientes en facturas -->
    <record id="view_move_form_hide_outstanding_credits" model="ir.ui.view">
        <field name="name">account.move.form.hide.outstanding.credits</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ocultar el widget de pagos/créditos pendientes y la alerta -->
            <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
