<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista List para movimientos -->
    <record id="view_customer_account_move_tree" model="ir.ui.view">
        <field name="name">customer.account.move.list</field>
        <field name="model">customer.account.move</field>
        <field name="arch" type="xml">
            <list string="Movimientos de Cuenta (LV)" create="false">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="description"/>
                <field name="debit" sum="Total Debe"/>
                <field name="credit" sum="Total Haber"/>
                <field name="balance"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <!-- Vista Form para movimientos -->
    <record id="view_customer_account_move_form" model="ir.ui.view">
        <field name="name">customer.account.move.form</field>
        <field name="model">customer.account.move</field>
        <field name="arch" type="xml">
            <form string="Movimiento de Cuenta (LV)">
                <header>
                    <button name="action_cancel_move" string="Cancelar Movimiento (LV)" type="object" class="btn-danger" invisible="state != 'posted'" groups="point_of_sale.group_pos_manager"/>
                    <button name="action_reactivate_move" string="Reactivar (LV)" type="object" class="btn-primary" invisible="state != 'cancelled'" groups="point_of_sale.group_pos_manager"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="alert alert-warning" role="alert" invisible="state != 'cancelled'">
                        Este movimiento está cancelado y no afecta al saldo del cliente.
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="debit"/>
                            <field name="credit"/>
                            <field name="balance"/>
                            <field name="reference"/>
                            <field name="pos_order_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista Form para pagos -->
    <record id="view_customer_payment_form" model="ir.ui.view">
        <field name="name">customer.payment.form</field>
        <field name="model">customer.payment</field>
        <field name="arch" type="xml">
            <form string="Pago de Cliente (LV)">
                <header>
                    <button name="action_post" string="Confirmar (LV)" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancelar (LV)" type="object" invisible="state != 'posted'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="payment_method"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="memo"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notas y Actividades" name="chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista Form simplificada para popup/dialog -->
    <record id="view_customer_payment_form_popup" model="ir.ui.view">
        <field name="name">customer.payment.form.popup</field>
        <field name="model">customer.payment</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Registrar Pago (LV)">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" readonly="1"/>
                            <field name="date"/>
                            <field name="payment_method"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="memo" placeholder="Agregar nota opcional..."/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_post" string="Confirmar Pago (LV)" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Vista List para pagos -->
    <record id="view_customer_payment_tree" model="ir.ui.view">
        <field name="name">customer.payment.list</field>
        <field name="model">customer.payment</field>
        <field name="arch" type="xml">
            <list string="Pagos de Clientes (LV)">
                <field name="name"/>
                <field name="date"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="payment_method"/>
                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>
    
    <!-- Acciones del menú -->
    <record id="action_customer_account_moves" model="ir.actions.act_window">
        <field name="name">Movimientos de Cuenta Corriente (LV)</field>
        <field name="res_model">customer.account.move</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
    </record>
    
    <record id="action_customer_payments" model="ir.actions.act_window">
        <field name="name">Pagos de Clientes (LV)</field>
        <field name="res_model">customer.payment</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <!-- Menús -->
    <menuitem id="menu_account_current_root" 
              name="Cuenta Corriente (LV)" 
              parent="point_of_sale.menu_point_root"
              sequence="50"/>
              
    <menuitem id="menu_customer_account_moves" 
              name="Movimientos (LV)" 
              parent="menu_account_current_root"
              action="action_customer_account_moves"
              sequence="10"/>
              
    <menuitem id="menu_customer_payments" 
              name="Pagos (LV)" 
              parent="menu_account_current_root"
              action="action_customer_payments"
              sequence="20"/>
</odoo>
